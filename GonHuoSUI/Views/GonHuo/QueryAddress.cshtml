@using GonHuoSModel;
@{
    ViewBag.Title = "QueryAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var lis = ViewBag.Addres as List<AddressBiao>;
    var id = ViewBag.id;
}
<form action="@Url.Action("QueryAddress")">
    <div class="container">
        <div class="row">
            <a href="@Url.Action("AddAddress", new {id=id })">新增</a><a href="@Url.Action("Query")" class="btn btn-success">返回列表</a>
        </div>
        <div class="row">
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>姓名</th>
                        <th>供货商编号</th>
                        <th>联系电话</th>
                        <th>地址</th>
                        <th>添加时间</th>
                        <th>修改时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in lis)
                        {
                            <tr>
                                <td>@item.Aid</td>
                                <td>@item.AName</td>
                                <td>@item.Gid</td>
                                <td>@item.Aphone</td>
                                <td>@item.AAddress</td>
                                <td>@item.TTime</td>
                                <td>@item.XTime</td>
                                <td>
                                    <a href="@Url.Action("ShowInfo", new {id=item.Aid })">删除</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

